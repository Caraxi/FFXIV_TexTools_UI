<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <OutputPath>..\\bin\\$(Configuration)\\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>


    <PostBuildEvent>echo Moving DLL Files
      mkdir $(TargetDir)lib
      xcopy $(TargetDir)*.dll $(TargetDir)lib /y
      del *.dll
      del *.cso
      move $(TargetDir)lib\\ConsoleTools.dll $(TargetDir)ConsoleTools.dll
    </PostBuildEvent>
  </PropertyGroup>


  <ItemGroup>
    <ProjectReference Include="..\lib\xivModdingFramework\xivModdingFramework\xivModdingFramework.csproj" />
  </ItemGroup>
  
</Project>
